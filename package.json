{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "A modern real-time chat application built with React and Firebase",
  "private": true,
  "author": "Satish Pansara",
  "license": "MIT",
  "keywords": [
    "react",
    "firebase",
    "chat",
    "real-time",
    "messaging"
  ],
  "dependencies": {
    "firebase": "^10.13.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "react-scripts": "^5.0.1",
    "react-toastify": "^11.0.5",
    "uuid": "^11.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "dev": "set PORT=3000 && react-scripts start --env-file=.env",
    "build": "react-scripts build",
    "lint": "eslint src --ext .js,.jsx --fix",
    "lint:check": "eslint src --ext .js,.jsx",
    "format": "prettier --write \"src/**/*.{js,jsx,css,scss,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,css,scss,json,md}\"",
    "clean": "rm -rf build node_modules package-lock.json && npm install",
    "analyze": "npm run build:prod && npx serve -s build",
    "prepare": "husky install",
    "eject": "react-scripts eject"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "sass": "^1.83.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,scss,json,md}": [
      "prettier --write"
    ]
  }
}
